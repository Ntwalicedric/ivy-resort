# EmailJS Template Variables (for reference)
# These are the variables your EmailJS template should support:
# {{to_email}} - Recipient email address
# {{to_name}} - Recipient name
# {{from_name}} - Sender name (Ivy Resort)
# {{from_email}} - Sender email (ivyresort449@gmail.com)
# {{subject}} - Email subject
# {{message}} - Email message content
# {{confirmation_id}} - Booking confirmation ID
# {{room_name}} - Room type
# {{check_in_date}} - Check-in date
# {{check_out_date}} - Check-out date
# {{total_amount}} - Total amount
# {{special_requests}} - Special requests
# {{current_date}} - Current date/time

# =============================================================================
# DATABASE CONFIGURATION (if using direct database connection)
# =============================================================================
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=ivy_resort
VITE_DB_USER=admin
VITE_DB_PASSWORD=your_password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
VITE_JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
VITE_TOKEN_EXPIRY=8h
VITE_ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=Ivy Resort
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:4028

# =============================================================================
# REAL-TIME UPDATES & PERFORMANCE
# =============================================================================
VITE_REAL_TIME_ENABLED=true
VITE_REFRESH_INTERVAL=30000
VITE_CACHE_DURATION=300000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_SMS_NOTIFICATIONS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_CURRENCY_CONVERSION=true
VITE_ENABLE_REPORTS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
VITE_USE_MOCK_DATA=true
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_ENABLE_CONSOLE_LOGS=true

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# VITE_USE_MOCK_DATA=false
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error
# VITE_ENABLE_CONSOLE_LOGS=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Exchange Rate API (for currency conversion)
VITE_EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
VITE_EXCHANGE_RATE_BASE_URL=https://api.exchangerate-api.com/v4/latest

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Default admin credentials (change these!)
